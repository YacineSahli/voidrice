#!/bin/bash

[ "$(stat -c %y ~/.cache/coronabe 2> /dev/null | cut -b 1-16 )" != "$(date '+%Y-%m-%d %H:%M')" ] &&
	curl -s "https://corona-stats.online/be" > ~/.cache/coronabe

grep "Belgium" ~/.cache/coronabe | sed "s/\s*//g;s/â•‘//g;s/â”‚/;/g;s/\x1b\[[0-9;]*m//g" | awk -F ";"  '{print "ğŸ‡§ğŸ‡ªğŸ˜·"$3 " ("$4") ğŸ’€" $5 "("$6")"}'
